{
  "name":"QR-code",
  "version":"0.0.1",
  "manifest_version": 2,
  "description":"邮件生成当前页面链接的二维码，方便切换到手机访问。",
  "icons":{
    "16": "images/icon16.jpg",
    "48": "images/icon48.jpg",
    "64": "images/icon64.jpg",
    "128": "images/icon128.jpg"
  },
  "permissions":[
    "contextMenus","bookmarks","http://localhost:3000/"
  ],
  "background":{
    "scripts":[
      "js/jquery.min.js",
      "js/jquery.qrcode.js",
      "js/qrcode.js",
      "js/script.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["https://wx.qq.com/*"],
      "css": ["css/style.css"],
      "js": ["js/jquery-3.1.1.min.js", "js/wx.js"]
    }
  ]
}